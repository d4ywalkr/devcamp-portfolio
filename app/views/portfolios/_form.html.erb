<%= form_with(model: portfolio_item, local: true) do |form| %>

  <% if portfolio_item.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(portfolio_item.errors.count, "error") %> prohibited this portfolio item from being saved:</h2>

      <ul>
      <% portfolio_item.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row">
    <div class="col-md-6">
      <div class="form-group">
        <%= form.text_field :title, id: :portfolio_title, class: "form-control", placeholder: 'Title' %>
      </div>

      <div class="form-group">
        <%= form.text_field :subtitle, id: :portfolio_subtitle, class: "form-control", placeholder: 'Subtitle' %>
      </div>

      <div class="form-group">
        <label class="btn btn-primary">
          Upload a main image file <%= form.file_field :main_image, style: 'display:none;' %>
        </label>
      </div>

      <div class="form-group">
        <label class="btn btn-primary">
          Upload a tumb image file <%= form.file_field :thumb_image, style: 'display:none;' %>
        </label>
      </div>
    </div>

    <div class="col-md-6">
      <div class="form-group">
        <%= form.text_area :body, id: :portfolio_body, class: "form-control", rows: 14, placeholder: 'Content' %>
      </div>
    </div>
  </div>

  <hr>

  <div class="col-md-12">
    <h2>Technologies Used</h2>
    <div>
      <%= form.fields_for :technologies do |technology_form| %>
        <%= render "technology_fields", f: technology_form %>
      <% end %>

      <div>
        <%= link_to_add_association "Add Technology", form, :technologies %>
      </div>
    </div>

    <div class="form-group">
      <%= form.submit class: "btn btn-primary" %>
    </div>
  </div>

<% end %>
