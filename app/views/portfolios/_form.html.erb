    <%= form.label :subtitle %>
    <%= form.text_field :subtitle, id: :portfolio_title %>
  </div>

  <div class="field">
    <%= form.label :body %>
    <%= form.text_area :body, id: :portfolio_body %>
  </div>

  <ul>
    <%= form.fields_for :technologies do |t| %>
      <li>
        <%= t.label :name %>
        <%= t.text_field :name, id: :technology_name %>
      </li>
    <% end %>
  </ul>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
