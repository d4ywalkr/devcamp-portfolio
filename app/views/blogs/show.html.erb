<div class="col-md-8 blog-main">

  <h2 class="blog-post-title"><%= @blog.title %></h2>
  <p class="blog-post-meta">Published <%= distance_of_time_in_words(@blog.created_at, Time.now) %> ago</p>

  <p class="blog-post-meta">
    <%= link_to 'Back', blogs_path %>
    <% if logged_in?(:site_admin) %>
        / <%= link_to @blog.status, toggle_status_blog_path(@blog) %> /
        <%= link_to 'Edit', edit_blog_path(@blog) %> /
        <%= link_to 'Destroy', @blog, method: :delete, data: { confirm: 'Are you sure?' } %>
    <% end %>
  </p>

  <p>
    <%= @blog.body %>
  </p>

  <% unless current_user.is_a? GuestUser %>
    <%= form_with(model: @comment, local: true, url: '#') do |form| %>

      <div class="form-group">
        <%= form.label :content %>
        <%= form.text_area :content, class: 'form-control' %>
      </div>

      <%= form.submit 'Post Comment', class: 'btn btn-secondary' %>
    <% end %>
  <% end %>

  <%= render @blog.comments %>

</div>
