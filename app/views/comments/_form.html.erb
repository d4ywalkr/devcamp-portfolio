<% unless current_user.is_a? GuestUser %>
  <%= form_with(model: @comment, html: { id: "new_comment" }, url: '#') do |form| %>

    <div class="form-group">
      <%= form.label :content %>
      <%= form.text_area :content, class: 'form-control' %>
    </div>

    <%= form.submit 'Post Comment', class: 'btn btn-secondary' %>
  <% end %>
<% end %>
